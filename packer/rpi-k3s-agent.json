{
  "variables": {
    "k3s_version": ""
  },
  "builders": [
    {
      "type": "arm-image",
      "image_type": "raspberrypi",
      "qemu_binary": "qemu-aarch64-static",
      "iso_url": "http://cdimage.ubuntu.com/releases/20.04/release/ubuntu-20.04-preinstalled-server-arm64+raspi.img.xz",
      "iso_checksum_type": "sha256",
      "iso_checksum": "48167067d65c5192ffe041c9cc4958cb7fcdfd74fa15e1937a47430ed7b9de99",
      "image_mounts": [
        "/boot/firmware",
        "/"
      ],
      "additional_chroot_mounts": [
        [
          "bind",
          "/run/systemd",
          "/run/systemd"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "K3S_VERSION={{user `k3s_version`}}"
      ],
      "scripts": [
        "scripts/install-k3s-binary.sh",
        "scripts/install-k3s-agent.sh"
      ]
    }
  ]
}